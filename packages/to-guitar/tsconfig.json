{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"declaration": true,
		"emitDeclarationOnly": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {},
		"esModuleInterop": true,

		/* Advanced Options */
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	}
}
